#!/usr/bin/env bash


# Start of config
DATABASE=xoundboy_dev
DBUSER=root
DUMPFILE=xoundboy_dev.sql
DUMPFILENODATA=xoundboy_dev_no_data.sql
# End of config


DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"


cd ${DIR}/sql

# Dump the database with data
if [ "$1" == "dump" ]; then
    mysqldump -u${DBUSER} -p ${DATABASE} --routines > ${DUMPFILE}

# Dump without data
elif [ "$1" == "dumpnodata" ]; then
    mysqldump -u${DBUSER} -p -d ${DATABASE} --routines >  ${DUMPFILENODATA}

# Load database with data
elif [ "$1" == "load" ]; then
    mysql -u${DBUSER} -p ${DATABASE} < ${DUMPFILE}

# Load without data (just schema)
elif [ "$1" == "loadnodata" ]; then
    mysql -u${DBUSER} -p ${DATABASE} < ${DUMPFILENODATA}

# Show no arg error
else
    echo "no argument passed. Possible arg values..."
    echo "[dump|dumpnodata|load|loadnodata]"
fi



cd $DIR